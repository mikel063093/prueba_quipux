<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="TranslucentActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:background">@color/primary</item>
    <item name="android:elevation">4dp</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="MyFloatingButton" parent="Theme.AppCompat.Light">
    <item name="colorAccent">@color/primary</item>
  </style>

  <style name="card_white" parent="CardView">
    <item name="cardCornerRadius">1dp</item>
    <item name="cardBackgroundColor">@color/white</item>
    <item name="android:hardwareAccelerated">true</item>
    <item name="cardUseCompatPadding">true</item>

  </style>

  <style name="txt_taupe" parent="android:Widget.TextView">
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">normal</item>

  </style>
</resources>
